<Alloy>
	<Collection src="timer"></Collection>
	<Window id="index" keepScreenOn="false" onOpen="init" onAndroid:back="close" >
		
	    <Menu id="menu"
	    	platform="android">
	        <MenuItem id="addNew"
	        	onClick="addTimer" />
	        <MenuItem id="settings"
	        	onClick="showSettings" />
	    </Menu>
		
		<ScrollView id="container"
			class="container" />
			
		<ActivityIndicator id="activityIndicator" />
	</Window>
</Alloy>